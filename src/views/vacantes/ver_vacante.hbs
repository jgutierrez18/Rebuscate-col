<div class="jumbotron p-4 p-md-5 text-white rounded bg-tertiary">
  <div class="col-md-8 px-0">
    <h1 class="display-4 text-white ">{{vacante.titulo}}</h1>
    <p class="lead my-3"> {{vacante.descripcion}}</p>
    <p class="lead mb-0">{{timeago vacante.date}}</p>
  </div>

</div>
<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="/img/img_Vacantes/{{vacante.imgNombre}}" alt="Imagen vacante">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/img_Vacantes/{{vacante.imgNombre}}" alt="Imagen vacante">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="/img/img_Vacantes/{{vacante.imgNombre}}" alt="Imagen vacante">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

<div class="row p-4">
  <div class="col-md-8 bg-secondary rounded blog-main">
    <h3 class="p-4 mb-4 font-italic border-bottom">
      Vacante en {{vacante.ciudad}}
    </h3>

    <div class="blog-post">
      <h2 class="blog-post-title">Comentarios </h2>

      <hr>{{#each comentarios}}
      <p class="blog-post-meta">{{timeago comentarios.date}} por <a href="#">murcia</a></p>

      <h5><em>{{comentario}}</em></h5>
      {{else}}
      <p class="blog-post-meta">Publicacion SIN COMENTARIOS </p>
      <hr>
      {{/each}}
      <hr>

    </div><!-- /.blog-post -->

    <nav class="blog-pagination">
    <form  id="messageform" method="POST" action="/vacantes/ver">
       <input  style="visibility:hidden" name="vacanteid" value="{{vacante._id}}"/>
       <div class="input-group mb-3">
        
        <input type="text" name="comentario" class="form-control" placeholder="Comentario"/>
       
        <div class="input-group-append">
          <button class="btn btn-primary" type="submit">Enviar</button>
        </div>
        
      </div>
      </form>
    </nav>

  </div><!-- /.blog-main -->

  <aside class="col-md-4 blog-sidebar">
    <div class="p-4 mb-3 text-white rounded bg-tertiary">
      <h4 class="font-italic text-white">{{vacante.dinero}}</h4>
      <p class="mb-0">Etiam porta <em>sem malesuada magna</em> mollis euismod. Cras mattis consectetur purus sit amet
        fermentum. Aenean lacinia bibendum nulla sed consectetur.</p>
    </div>
</div>

<div class="container p-4">
  <h3>Publicacion en {{vacante.ciudad}}</h3>
  <div class="row">
    <div class="card-columns">

      <div class="card bg-secondary animated jackInTheBox">
        <div class="card-body">
          <h3 class="heading heading-5 strong-600 card-title d-flex justify-content-between align-items-center">
            {{vacante.titulo}}</h3>
          <h5 class="text-muted mb-4">{{vervacante.trabajo}}</h5>
          <ul class="list-inline mb-4">
            <li class="list-inline-item pr-2">
              <i class="fas fa-dollar-sign mr-1"></i>{{vacante.dinero}}
            </li>
            <li class="list-inline-item">
              <a href="">
                <h6> <i class="fas fa-compass text-muted mr-1"></i>{{vacante.ciudad}}</h6>
              </a>
            </li>
          </ul>
          <img class="card-img-top" src="/img/img_Vacantes/{{vacante.imgNombre}}" alt="Imagen vacante"
            class="img-fluid">
          <p class="card-text">{{vacante.descripcion}}</p>

          <div class="card-footer">
            <div class="row align-items-center">
              <div class="col">
                <span class="avatar avatar-sm bg-purple"> </span>
                <span class="avatar-content"></span>
              </div>
              <div class="col text-right text-xs-right">
                <ul class="list-inline mb-0">
                  <li class="list-inline-item pr-2">
                    {{timeago vacante.date}}
                  </li>
                  <li class="list-inline-item pr-2">
                    {{user.name}}
                  </li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>