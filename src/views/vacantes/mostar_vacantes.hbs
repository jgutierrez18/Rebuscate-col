<h1> vacantes </h1>
<div class="container p-4">
  <div class="row">

    <div class="card-columns">
      {{#each Vacantes}}

      <div class="card bg-secondary animated jackInTheBox">
        <div class="card-body">
          <h3 class="heading heading-5 strong-600 card-title d-flex justify-content-between align-items-center">
            {{titulo}}
          </h3>

          <h5 class="text-muted mb-4">{{trabajo}}</h5>
          <ul class="list-inline mb-4">
            <li class="list-inline-item pr-2">
              <i class="fas fa-dollar-sign mr-1"></i>{{dinero}}
            </li>
            <li class="list-inline-item">
              <a href="">
                <h6> <i class="fas fa-compass text-muted mr-1"></i>{{ciudad}}</h6>
              </a>
            </li>
          </ul>
          <img class="card-img-top" src="/img/img_Vacantes/{{imgNombre}}" alt="Imagen vacante" class="img-fluid">
          <p class="card-text">{{descripcion}}</p>
          <a class="btn btn-success" href="/vacantes/ver/{{_id}}">ver publicacion</a>
          <p class="card-text">{{timeago date}}</p>


          <div class="card-footer">
            <div class="row align-items-center">
              Comentarios
              <div class="list-group-item list-group-item-action d-flex align-items-center">

                <div class="list-group-content">
                  <div id="chat" class="list-group-heading"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>




      {{else}}
      <div class="card mx-auto">
        <div class="card-body">
          <h1>Hola {{user.nombre}} </h1>
          <p class="lead">Todavia no publicas Vacantes..</p>
          <a href="/vacantes/crear" class="btn btn-success btn-block">Publicar un trabajo</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
</div>
