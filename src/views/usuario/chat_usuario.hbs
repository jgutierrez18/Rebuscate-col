<div class="row">

       <div class="col-md-6">
        <div class="card">
            <div class="card-header py-4">
                <h4 class="heading h5 font-weight-500 mb-0">Personas</h4>
            </div>
            
    {{#each Usuarios}}
            <div class="list-group">
                <ul class="list-group list-group-flush"> 
                    <li class="list-group-item">{{nombre}}</li>
                </ul>
            </div>
             {{/each}} 
        </div>
    </div>


    <div class="col-md-6">
        <div class="card bg-tertiary text-white">
            <div class="card-header bg-tertiary  py-4">
                <div class="d-flex align-items-center">
                    <h4 class="text-white heading h5 mb-0">Add team members</h4>
                </div>
            </div>
            <div  class=" bg-tertiary text-white list-group">

               <div class="list-group-item list-group-item-action d-flex align-items-center">

                    <div class="list-group-content">
                        <div id="chat" class="list-group-heading"> <span class="avatar bg-purple"> </span> mensaje aqui</div>
                    </div>
                </div>
                
                
            </div>
           
                <form id="message-form" class="card-comment-box">
                  <div class="card-footer bg-secondary text-white"> 
                   <div class="input-group mb-3">
                    <input id="message" type="text" class="form-control" placeholder="Mensaje aqui">
                    <div class="input-group-append">
                        <button  class="btn btn-success" type="submit">enviar</button>
                    </div>
                </div>
               
            </div>
         </form>
        </div>
    </div>
        
        
   

</div>